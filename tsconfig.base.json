{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@eiq/ui": ["libs/shared/ui/src/index.ts"],
      "@eiq/util": ["libs/shared/util/src/index.ts"],
      "@eiq/models": ["libs/shared/models/src/index.ts"],
      "@eiq/data-access": ["libs/surveys/data-access/src/index.ts"],
      "@eiq/survey-list": ["libs/surveys/survey-list/src/index.ts"],
      "@eiq/survey-details": ["libs/surveys/survey-details/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
